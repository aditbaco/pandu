# Database Configuration
# PostgreSQL database URL for Neon serverless connection
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# PostgreSQL Connection Details (automatically set by Replit when using PostgreSQL)
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=your_database_name

# Application Configuration
# Environment setting for the application
NODE_ENV=development

# Server Configuration
# Port for the Express server (default: 5000)
PORT=5000

# Session Configuration (for future authentication features)
# Session secret key for express-session (generate a random string)
SESSION_SECRET=your_random_session_secret_key_here

# Optional: External Service API Keys (if needed in the future)
# Example: EMAIL_API_KEY=your_email_service_api_key
# Example: SMS_API_KEY=your_sms_service_api_key